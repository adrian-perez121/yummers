<h1>Chat between <%= @chat.chatter_1.name %> and <%= @chat.chatter_2.name %></h1>
<%= content_tag(:div, "", data: {
  controller: "chat",
  turbo: false,
  chat_id: @chat.id
})
%>


<div class="messages">
<% @chat.messages.each do |msg| %>
    <div class="message <%= msg.sender == @current_user ? "left" : "right" %>">
      <%= msg.message %>
    </div>
  <% end %>
</div>
